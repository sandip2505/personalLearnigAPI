<%- contentFor('extra_css') %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
    .media-gallery {
        padding: 20px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .gallery-header {
        text-align: center;
        margin-bottom: 40px;
        padding: 30px 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .gallery-header h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .gallery-header p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin: 0;
    }

    .gallery-stats {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin: 20px 0;
        flex-wrap: wrap;
    }

    .stat-item {
        background: rgba(255,255,255,0.2);
        padding: 15px 25px;
        border-radius: 10px;
        text-align: center;
        backdrop-filter: blur(10px);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        display: block;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .gallery-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .search-box {
        position: relative;
        flex: 1;
        max-width: 400px;
    }

    .search-box input {
        width: 100%;
        padding: 12px 45px 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 25px;
        font-size: 16px;
        transition: all 0.3s ease;
        background: white;
    }

    .search-box input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .search-box i {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .view-toggles {
        display: flex;
        gap: 10px;
    }

    .view-btn {
        padding: 10px 15px;
        border: 2px solid #e9ecef;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #6c757d;
    }

    .view-btn.active,
    .view-btn:hover {
        background: #667eea;
        border-color: #667eea;
        color: white;
    }

    .sort-dropdown {
        select {
            padding: 10px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            font-size: 14px;
        }
    }

    .gallery-grid {
        display: grid;
        gap: 20px;
        margin-bottom: 40px;
        transition: all 0.3s ease;
    }

    .grid-view {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }

    .list-view {
        grid-template-columns: 1fr;
    }

    .masonry-view {
        column-count: 4;
        column-gap: 20px;
    }

    .media-item {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        position: relative;
        break-inside: avoid;
        margin-bottom: 20px;
    }

    .media-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .media-image {
        position: relative;
        overflow: hidden;
    }

    .media-image img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
    }

    .grid-view .media-image img {
        height: 220px;
        object-fit: cover;
    }

    .list-view .media-image {
        width: 200px;
        flex-shrink: 0;
    }

    .list-view .media-image img {
        height: 150px;
        object-fit: cover;
    }

    .media-item:hover .media-image img {
        transform: scale(1.05);
    }

    .media-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.7) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: flex-end;
        padding: 20px;
    }

    .media-item:hover .media-overlay {
        opacity: 1;
    }

    .media-actions {
        display: flex;
        gap: 10px;
    }

    .action-btn {
        padding: 8px 12px;
        background: rgba(255,255,255,0.9);
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #333;
        font-size: 14px;
    }

    .action-btn:hover {
        background: white;
        transform: translateY(-2px);
    }

    .media-info {
        padding: 20px;
        flex: 1;
    }

    .media-name {
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 8px;
        color: #333;
        word-break: break-all;
    }

    .media-details {
        display: flex;
        justify-content: space-between;
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 10px;
        flex-wrap: wrap;
    }

    .media-size {
        color: #28a745;
        font-weight: 500;
    }

    .list-view .media-item {
        display: flex;
        align-items: center;
    }

    .no-results {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

    .no-results i {
        font-size: 4rem;
        margin-bottom: 20px;
        color: #dee2e6;
    }

    .loading {
        text-align: center;
        padding: 40px;
    }

    .spinner {
        border: 3px solid #f3f3f3;
        border-top: 3px solid #667eea;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 0 auto 20px;
    }

    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.9);
        backdrop-filter: blur(5px);
    }

    .modal-content {
        position: relative;
        margin: 2% auto;
        max-width: 90%;
        max-height: 90%;
        text-align: center;
    }

    .modal-image {
        max-width: 100%;
        max-height: 80vh;
        object-fit: contain;
        border-radius: 10px;
    }

    .modal-close {
        position: absolute;
        top: 15px;
        right: 35px;
        color: white;
        font-size: 40px;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.3s;
    }

    .modal-close:hover {
        color: #667eea;
    }

    .modal-info {
        color: white;
        padding: 20px;
        background: rgba(0,0,0,0.5);
        border-radius: 10px;
        margin-top: 20px;
        backdrop-filter: blur(10px);
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .masonry-view {
            column-count: 2;
        }
        
        .gallery-header h1 {
            font-size: 2rem;
        }
        
        .gallery-controls {
            flex-direction: column;
            align-items: stretch;
        }
        
        .search-box {
            max-width: none;
        }
        
        .gallery-stats {
            gap: 15px;
        }
        
        .stat-item {
            padding: 10px 15px;
        }
    }

    @media (max-width: 480px) {
        .masonry-view {
            column-count: 1;
        }
        
        .grid-view {
            grid-template-columns: 1fr;
        }
    }
</style>

<%- contentFor('content') %>
<div class="media-gallery">
    <!-- Gallery Header -->
    <div class="gallery-header">
        <h1><i class="fas fa-images"></i> Media Gallery</h1>
        <p>Manage and browse your media collection</p>
        <div class="gallery-stats">
            <div class="stat-item">
                <span class="stat-number" id="totalImages">0</span>
                <span class="stat-label">Total Images</span>
            </div>
            <div class="stat-item">
                <span class="stat-number" id="totalSize">0 MB</span>
                <span class="stat-label">Total Size</span>
            </div>
        </div>
    </div>

    <!-- Gallery Controls -->
    <div class="gallery-controls">
        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Search images by name...">
            <i class="fas fa-search"></i>
        </div>
        
        <div class="view-toggles">
            <button class="view-btn active" data-view="grid" title="Grid View">
                <i class="fas fa-th"></i>
            </button>
            <button class="view-btn" data-view="list" title="List View">
                <i class="fas fa-list"></i>
            </button>
            <button class="view-btn" data-view="masonry" title="Masonry View">
                <i class="fas fa-th-large"></i>
            </button>
        </div>

        <div class="sort-dropdown">
            <select id="sortSelect">
                <option value="name-asc">Name (A-Z)</option>
                <option value="name-desc">Name (Z-A)</option>
                <option value="size-asc">Size (Small to Large)</option>
                <option value="size-desc">Size (Large to Small)</option>
            </select>
        </div>
    </div>

    <!-- Loading State -->
    <div class="loading" id="loadingState">
        <div class="spinner"></div>
        <p>Loading images...</p>
    </div>

    <!-- Gallery Grid -->
    <div class="gallery-grid grid-view" id="galleryGrid">
        <!-- Images will be dynamically inserted here -->
    </div>

    <!-- No Results -->
    <div class="no-results" id="noResults" style="display: none;">
        <i class="fas fa-search"></i>
        <h3>No images found</h3>
        <p>Try adjusting your search criteria</p>
    </div>
</div>

<!-- Image Modal -->
<div id="imageModal" class="modal">
    <span class="modal-close">&times;</span>
    <div class="modal-content">
        <img class="modal-image" id="modalImage" src="" alt="">
        <div class="modal-info" id="modalInfo">
            <h3 id="modalImageName"></h3>
            <p id="modalImageDetails"></p>
        </div>
    </div>
</div>

<%- contentFor('extra_javascript') %>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Media data from server
    const mediaData = <%- JSON.stringify(media) %>;
    let filteredMedia = [];
    let currentView = 'grid';
    
    // DOM elements
    const galleryGrid = document.getElementById('galleryGrid');
    const searchInput = document.getElementById('searchInput');
    const sortSelect = document.getElementById('sortSelect');
    const viewButtons = document.querySelectorAll('.view-btn');
    const loadingState = document.getElementById('loadingState');
    const noResults = document.getElementById('noResults');
    const totalImagesSpan = document.getElementById('totalImages');
    const totalSizeSpan = document.getElementById('totalSize');
    
    // Modal elements
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    const modalImageName = document.getElementById('modalImageName');
    const modalImageDetails = document.getElementById('modalImageDetails');
    const modalClose = document.querySelector('.modal-close');

    // Initialize the gallery
    async function initGallery() {
        try {
            // Process media data with additional information
            filteredMedia = await Promise.all(mediaData.map(async (imagePath, index) => {
                const fileName = imagePath.split('/').pop();
                const fileExtension = fileName.split('.').pop().toLowerCase();
                
                return {
                    id: index,
                    path: `${imagePath}`,
                    name: fileName,
                    extension: fileExtension,
                    size: await getImageSize(imagePath), // This would need to be implemented or mocked
                    displaySize: '-- KB' // Placeholder since we can't get actual file size from client
                };
            }));
            
            updateStats();
            renderGallery();
            loadingState.style.display = 'none';
        } catch (error) {
            console.error('Error initializing gallery:', error);
            loadingState.innerHTML = '<p>Error loading images</p>';
        }
    }

    // Mock function for image size (in real app, you'd get this from server)
    async function getImageSize(imagePath) {
        return Math.floor(Math.random() * 2000) + 100; // Random size between 100-2100 KB
    }

    // Update statistics
    function updateStats() {
        totalImagesSpan.textContent = filteredMedia.length;
        const totalSize = filteredMedia.reduce((sum, img) => sum + img.size, 0);
        totalSizeSpan.textContent = (totalSize / 1024).toFixed(1);
    }

    // Render gallery
    function renderGallery() {
        if (filteredMedia.length === 0) {
            galleryGrid.style.display = 'none';
            noResults.style.display = 'block';
            return;
        }

        galleryGrid.style.display = 'grid';
        noResults.style.display = 'none';

        galleryGrid.innerHTML = filteredMedia.map(image => `
            <div class="media-item" data-id="${image.id}">
                <div class="media-image">
                    <img src="${image.path}" alt="${image.name}" loading="lazy" onerror="handleImageError(this)">
                    <div class="media-overlay">
                        <div class="media-actions">
                            <button class="action-btn" onclick="viewImage('${image.path}', '${image.name}', '${image.displaySize}')">
                                <i class="fas fa-eye"></i> View
                            </button>
                            <button class="action-btn" onclick="downloadImage('${image.path}', '${image.name}')">
                                <i class="fas fa-download"></i> Download
                            </button>
                            <button class="action-btn" onclick="copyImageUrl('${image.path}')">
                                <i class="fas fa-copy"></i> Copy URL
                            </button>
                        </div>
                    </div>
                </div>
                <div class="media-info">
                    <div class="media-name" title="${image.name}">${image.name}</div>
                    <div class="media-details">
                        <span class="media-type">${image.extension.toUpperCase()}</span>
                        <span class="media-size">${image.displaySize}</span>
                    </div>
                </div>
            </div>
        `).join('');
    }

    // Handle image loading errors
    window.handleImageError = function(img) {
        img.src = 'data:image/svg+xml;base64,';
        img.alt = 'Image not found';
    };

    // Search functionality
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        filteredMedia = mediaData.map((imagePath, index) => ({
            id: index,
            path: `/uploads${imagePath}`,
            name: imagePath.split('/').pop(),
            extension: imagePath.split('/').pop().split('.').pop().toLowerCase(),
            size: Math.floor(Math.random() * 2000) + 100,
            displaySize: '-- KB'
        })).filter(image => 
            image.name.toLowerCase().includes(searchTerm)
        );
        
        sortImages();
        renderGallery();
        updateStats();
    });

    // Sort functionality
    sortSelect.addEventListener('change', sortImages);

    function sortImages() {
        const sortValue = sortSelect.value;
        
        filteredMedia.sort((a, b) => {
            switch(sortValue) {
                case 'name-asc':
                    return a.name.localeCompare(b.name);
                case 'name-desc':
                    return b.name.localeCompare(a.name);
                case 'size-asc':
                    return a.size - b.size;
                case 'size-desc':
                    return b.size - a.size;
                default:
                    return 0;
            }
        });
        
        renderGallery();
    }

    // View toggle functionality
    viewButtons.forEach(btn => {
        btn.addEventListener('click', function() {
            viewButtons.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            
            currentView = this.dataset.view;
            galleryGrid.className = `gallery-grid ${currentView}-view`;
        });
    });

    // Modal functionality
    window.viewImage = function(imagePath, imageName, imageSize) {
        modalImage.src = imagePath;
        modalImageName.textContent = imageName;
        modalImageDetails.textContent = `Size: ${imageSize} | Format: ${imageName.split('.').pop().toUpperCase()}`;
        modal.style.display = 'block';
    };

    modalClose.addEventListener('click', function() {
        modal.style.display = 'none';
    });

    window.addEventListener('click', function(event) {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    });

    // Download functionality
    window.downloadImage = function(imagePath, imageName) {
        const link = document.createElement('a');
        link.href = imagePath;
        link.download = imageName;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    };

    // Copy URL functionality
    window.copyImageUrl = function(imagePath) {
        const fullUrl = window.location.origin + imagePath;
        navigator.clipboard.writeText(fullUrl).then(function() {
            // You could show a toast notification here
            alert('Image URL copied to clipboard!');
        }).catch(function(err) {
            console.error('Could not copy text: ', err);
            // Fallback for older browsers
            const textarea = document.createElement('textarea');
            textarea.value = fullUrl;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
            alert('Image URL copied to clipboard!');
        });
    };

    // Keyboard shortcuts
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && modal.style.display === 'block') {
            modal.style.display = 'none';
        }
        if (event.ctrlKey && event.key === 'f') {
            event.preventDefault();
            searchInput.focus();
        }
    });

    // Initialize the gallery
    initGallery();
});
</script>