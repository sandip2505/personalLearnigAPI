<%- contentFor('extra_css') %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
    .section-card {
        transition: all 0.3s ease;
        border: 1px solid #e3e6f0;
        border-radius: 0.5rem;
        overflow: hidden;
    }
    
    .section-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border-color: #4e73df;
    }
    
    .section-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 1.25rem;
        position: relative;
        overflow: hidden;
    }
    
    .section-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.1);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .section-card:hover .section-header::before {
        opacity: 1;
    }
    
    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .section-number {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.85rem;
        font-weight: 700;
    }
    
    .section-content {
        padding: 1.25rem;
        background: #fff;
    }
    
    .content-preview {
        max-height: 120px;
        overflow: hidden;
        position: relative;
        line-height: 1.6;
        color: #5a5c69;
    }
    
    .content-preview::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 30px;
        background: linear-gradient(transparent, white);
    }
    
    .content-preview img {
        max-width: 100%;
        height: auto;
        border-radius: 0.25rem;
        margin: 0.5rem 0;
    }
    
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #e3e6f0;
    }
    
    .btn-action {
        flex: 1;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #36b9cc, #258391);
        border: none;
        color: white;
    }
    
    .btn-edit:hover {
        background: linear-gradient(135deg, #258391, #1e6b78);
        transform: translateY(-1px);
        box-shadow: 0 0.25rem 0.5rem rgba(37, 131, 145, 0.3);
        color: white;
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #e74a3b, #c0392b);
        border: none;
        color: white;
    }
    
    .btn-delete:hover {
        background: linear-gradient(135deg, #c0392b, #a93226);
        transform: translateY(-1px);
        box-shadow: 0 0.25rem 0.5rem rgba(192, 57, 43, 0.3);
        color: white;
    }
    
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0.5rem;
    }
    
    .add-section-btn {
        background: linear-gradient(135deg, #1cc88a, #17a673);
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 0.25rem 0.5rem rgba(28, 200, 138, 0.2);
    }
    
    .add-section-btn:hover {
        background: linear-gradient(135deg, #17a673, #13855c);
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(28, 200, 138, 0.3);
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #858796;
    }
    
    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
    
    .search-box {
        position: relative;
        margin-bottom: 1.5rem;
    }
    
    .search-box input {
        padding-left: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid #d1d3e2;
        transition: border-color 0.3s ease;
    }
    
    .search-box input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .search-box i {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: #858796;
    }
</style>

<%- contentFor('content') %>

<div class="container-xxl py-4">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h3 mb-2">
                        <i class="fas fa-file-alt me-2"></i>
                        Page Sections
                    </h1>
                    <p class="mb-0 opacity-75">Manage your page content sections</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/add-page-section" class="btn btn-light add-section-btn">
                        <i class="fas fa-plus me-2"></i>Add New Section
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Box -->
    <div class="search-box">
        <i class="fas fa-search"></i>
        <input type="text" class="form-control" id="searchInput" placeholder="Search sections...">
    </div>

    <!-- Sections Grid -->
    <div class="row" id="sectionsContainer">
        <% if (sections && sections.length > 0) { %>
            <% for (let i = 0; i < sections.length; i++) { %>
                <div class="col-lg-6 col-xl-4 mb-4 section-item">
                    <div class="card section-card h-100">
                        <div class="section-header">
                            <h5 class="section-title">
                                <span class="section-number"><%= i + 1 %></span>
                                <%= sections[i].name %>
                            </h5>
                        </div>
                        <div class="section-content">
                            <div class="content-preview">
                                <%- sections[i].content %>
                            </div>
                            <div class="action-buttons">
                                <a href="/edit-section/<%= sections[i]._id %>" class="btn btn-edit btn-action">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <button class="btn btn-delete btn-action" onclick="deleteSection('<%= sections[i]._id %>')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <!-- Empty State -->
            <div class="col-12">
                <div class="empty-state">
                    <i class="fas fa-file-alt"></i>
                    <h4>No Sections Found</h4>
                    <p>Start by creating your first page section</p>
                    <a href="/add-page-section" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add First Section
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- contentFor('extra_javascript') %>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const sections = document.querySelectorAll('.section-item');
        let visibleCount = 0;

        sections.forEach(section => {
            const title = section.querySelector('.section-title').textContent.toLowerCase();
            const content = section.querySelector('.content-preview').textContent.toLowerCase();
            
            if (title.includes(searchTerm) || content.includes(searchTerm)) {
                section.style.display = 'block';
                visibleCount++;
            } else {
                section.style.display = 'none';
            }
        });

        // Show search results message
        const container = document.getElementById('sectionsContainer');
        let searchMessage = document.getElementById('searchMessage');
        
        if (visibleCount === 0 && searchTerm !== '') {
            if (!searchMessage) {
                searchMessage = document.createElement('div');
                searchMessage.id = 'searchMessage';
                searchMessage.className = 'col-12';
                searchMessage.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <h4>No Results Found</h4>
                        <p>No sections match your search criteria</p>
                    </div>
                `;
                container.appendChild(searchMessage);
            }
        } else if (searchMessage) {
            searchMessage.remove();
        }
    });

    // Delete section function
    function deleteSection(id) {
        if (confirm('Are you sure you want to delete this section?')) {
            // Add your delete logic here
            const deleteUrl = fetch(`/api/deleteSection/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            deleteUrl.then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Section deleted successfully!');
                        window.location.reload();
                    } else {
                        alert('Error deleting section: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the section.');
                });
        } else {
            window.location.href = `/sections`;
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Add any additional initialization here
        console.log('Page sections loaded');
    });
</script>