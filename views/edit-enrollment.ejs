<%- contentFor('extra_css') %>

    <%- contentFor('content') %>

        <div class="container-xxl">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Edit Enrollment</h4>
                        </div>
                        <div class="card-body">
                            <form action="/edit-enrollment/<%= enrollment._id %>" method="POST">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="userId" class="form-label">User</label>
                                            <select class="form-select" id="userId" name="userId" required>
                                                <option value="">Select User</option>
                                                <% if (users && users.length> 0) { %>
                                                    <% for (let i=0; i < users.length; i++) { %>
                                                        <option value="<%= users[i]._id %>" <%=enrollment.userId &&
                                                            enrollment.userId._id.toString()===users[i]._id.toString()
                                                            ? 'selected' : '' %>><%= users[i].name %>
                                                        </option>
                                                        <% } %>
                                                            <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="courseId" class="form-label">Course</label>
                                            <select class="form-select" id="courseId" name="courseId" required>
                                                <option value="">Select Course</option>
                                                <% if (courses && courses.length> 0) { %>
                                                    <% for (let i=0; i < courses.length; i++) { %>
                                                        <option value="<%= courses[i]._id %>" <%=enrollment.courseId &&
                                                            enrollment.courseId._id.toString()===courses[i]._id.toString()
                                                            ? 'selected' : '' %>><%= courses[i].title %>
                                                        </option>
                                                        <% } %>
                                                            <% } %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="status" class="form-label">Status</label>
                                            <select class="form-select" id="status" name="status" required>
                                                <option value="">Select Status</option>
                                                <option value="active" <%=enrollment.status==='active' ? 'selected' : ''
                                                    %>>Active</option>
                                                <option value="completed" <%=enrollment.status==='completed'
                                                    ? 'selected' : '' %>>Completed</option>
                                                <option value="paused" <%=enrollment.status==='paused' ? 'selected' : ''
                                                    %>>Paused</option>
                                                <option value="cancelled" <%=enrollment.status==='cancelled'
                                                    ? 'selected' : '' %>>Cancelled</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="progress" class="form-label">Progress (%)</label>
                                            <input type="number" class="form-control" id="progress" name="progress"
                                                min="0" max="100" value="<%= enrollment.progress || 0 %>">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="enrolledAt" class="form-label">Enrolled Date</label>
                                            <input type="datetime-local" class="form-control" id="enrolledAt"
                                                name="enrolledAt"
                                                value="<%= enrollment.enrolledAt ? new Date(enrollment.enrolledAt).toISOString().slice(0, 16) : '' %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="completedAt" class="form-label">Completed Date</label>
                                            <input type="datetime-local" class="form-control" id="completedAt"
                                                name="completedAt"
                                                value="<%= enrollment.completedAt ? new Date(enrollment.completedAt).toISOString().slice(0, 16) : '' %>">
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">Update Enrollment</button>
                                    <a href="/enrollments" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- contentFor('extra_javascript') %>