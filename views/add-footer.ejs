<%- contentFor('extra_css') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
  .card-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  .btn-add {
    background: #28a745;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    color: white;
    font-size: 14px;
  }
  .btn-remove {
    background: #dc3545;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    color: white;
    font-size: 12px;
  }
  .dynamic-section {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 15px;
    background: #f8f9fa;
  }
</style>

<%- contentFor('content') %>
<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-lg border-0">
        <div class="card-header">
          <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add Footer Configuration</h4>
        </div>
        <div class="card-body">
          <form method="POST" id="footerForm" enctype="multipart/form-data">

            <!-- Footer Visibility -->
            <div class="col-md-5 mb-2">
              <label class="form-label fw-bold">Footer Name</label>
              <input type="text" class="form-control" name="name" placeholder="Footer Name">
            </div>
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" id="footerVisible" name="visible" checked>
                  <label class="form-check-label fw-bold" for="footerVisible">
                    <i class="fas fa-eye me-1"></i>Footer Visible
                  </label>
                </div>
              </div>
            </div>

            <!-- About Section -->
            <div class="card mb-4">
              <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>About Section</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Logo Image</label>
                    <input type="file" class="form-control" name="about[logoImage]" accept="image/*">
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="aboutVisible" name="about[visible]" checked>
                      <label class="form-check-label fw-bold" for="aboutVisible">About Section Visible</label>
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label fw-bold">Description</label>
                  <textarea class="form-control" name="about[description]" rows="3" placeholder="Company description..."></textarea>
                </div>

                <!-- Social Links -->
                <div class="mb-3">
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <label class="form-label fw-bold mb-0">Social Links</label>
                    <button type="button" class="btn-add" onclick="addSocialLink()">
                      <i class="fas fa-plus me-1"></i>Add Social Link
                    </button>
                  </div>
                  <div id="socialLinksContainer">
                    <!-- Social links will be added dynamically -->
                  </div>
                </div>
              </div>
            </div>

            <!-- Company Links -->
            <div class="card mb-4">
              <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-building me-2"></i>Company Links</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label class="form-label fw-bold">Company Name</label>
                  <input type="text" class="form-control" name="companyName" placeholder="Company Name">
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="fw-bold">Company Navigation Links</span>
                  <button type="button" class="btn-add" onclick="addCompanyLink()">
                    <i class="fas fa-plus me-1"></i>Add Company Link
                  </button>
                </div>
                <div id="companyLinksContainer">
                  <!-- Company links will be added dynamically -->
                </div>
              </div>
            </div>

            <!-- Platform Links -->
            <div class="card mb-4">
              <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Platform Links</h5>
              </div>

                
              <div class="card-body">
                <div class="mb-3">
                  <label class="form-label fw-bold">Platform Name</label>
                  <input type="text" class="form-control" name="platformName" placeholder="Platform Name">
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="fw-bold">Platform Navigation Links</span>
                  <button type="button" class="btn-add" onclick="addPlatformLink()">
                    <i class="fas fa-plus me-1"></i>Add Platform Link
                  </button>
                </div>
                <div id="platformLinksContainer">
                  <!-- Platform links will be added dynamically -->
                </div>
              </div>
            </div>

            <!-- Subscription Section -->
            <div class="card mb-4">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-envelope me-2"></i>Subscription Section</h5>
              </div>
              <div class="card-body">
                 <div class="mb-3">
                  <label class="form-label fw-bold">Form Name</label>
                  <input type="text" class="form-control" name="formName" placeholder="Form Name">
                </div>
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Placeholder Text</label>
                    <input type="text" class="form-control" name="subscription[placeholder]" placeholder="Enter your email...">
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="subscriptionVisible" name="subscription[visible]" checked>
                      <label class="form-check-label fw-bold" for="subscriptionVisible">Subscription Visible</label>
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label fw-bold">Info Text</label>
                  <input type="text" class="form-control" name="subscription[infoText]" placeholder="Subscribe to our newsletter for updates">
                </div>
              </div>
            </div>

            <!-- Copyright Section -->
            <div class="card mb-4">
              <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-copyright me-2"></i>Copyright Section</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-8 mb-3">
                    <label class="form-label fw-bold">Copyright Text</label>
                    <input type="text" class="form-control" name="copyright[text]" placeholder="Â© 2024 Your Company. All rights reserved.">
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="copyrightVisible" name="copyright[visible]" checked>
                      <label class="form-check-label fw-bold" for="copyrightVisible">Copyright Visible</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Form Actions -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary btn-lg px-5">
                <i class="fas fa-save me-2"></i>Save Footer Configuration
              </button>
              <a href="/admin/configurations" class="btn btn-secondary btn-lg px-5 ms-3">
                <i class="fas fa-times me-2"></i>Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('extra_javascript') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
let socialLinkIndex = 0;
let companyLinkIndex = 0;
let platformLinkIndex = 0;

function addSocialLink() {
  const container = document.getElementById('socialLinksContainer');
  const linkDiv = document.createElement('div');
  linkDiv.className = 'dynamic-section';
  linkDiv.innerHTML = `
    <div class="row">
      <div class="col-md-3 mb-2">
        <label class="form-label fw-bold">Platform</label>
        <select class="form-control" name="about[socialLinks][${socialLinkIndex}][platform]">
          <option value="">Select Platform</option>
          <option value="facebook">Facebook</option>
          <option value="twitter">Twitter</option>
          <option value="instagram">Instagram</option>
          <option value="linkedin">LinkedIn</option>
          <option value="youtube">YouTube</option>
          <option value="tiktok">TikTok</option>
        </select>
      </div>
      <div class="col-md-4 mb-2">
        <label class="form-label fw-bold">Link URL</label>
        <input type="text" class="form-control" name="about[socialLinks][${socialLinkIndex}][link]" placeholder="https://...">
      </div>
      <div class="col-md-3 mb-2">
        <label class="form-label fw-bold">Icon Class</label>
        <input type="text" class="form-control" name="about[socialLinks][${socialLinkIndex}][iconClass]" placeholder="fab fa-facebook">
      </div>
      <div class="col-md-2 mb-2">
        <label class="form-label fw-bold">Visible</label>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" name="about[socialLinks][${socialLinkIndex}][visible]" checked>
        </div>
        <button type="button" class="btn-remove mt-2" onclick="this.closest('.dynamic-section').remove()">
          <i class="fas fa-trash"></i> Remove
        </button>
      </div>
    </div>
  `;
  container.appendChild(linkDiv);
  socialLinkIndex++;
}

function addCompanyLink() {
  const container = document.getElementById('companyLinksContainer');
  const linkDiv = document.createElement('div');
  linkDiv.className = 'dynamic-section';
  linkDiv.innerHTML = `
    <div class="row">
      <div class="col-md-5 mb-2">
        <label class="form-label fw-bold">Link Name</label>
        <input type="text" class="form-control" name="companyLinks[${companyLinkIndex}][name]" placeholder="About Us">
      </div>
      <div class="col-md-5 mb-2">
        <label class="form-label fw-bold">Link URL</label>
        <input type="text" class="form-control" name="companyLinks[${companyLinkIndex}][link]" placeholder="/about">
      </div>
      <div class="col-md-2 mb-2">
        <label class="form-label fw-bold">Visible</label>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" name="companyLinks[${companyLinkIndex}][visible]" checked>
        </div>
        <button type="button" class="btn-remove mt-2" onclick="this.closest('.dynamic-section').remove()">
          <i class="fas fa-trash"></i> Remove
        </button>
      </div>
    </div>
  `;
  container.appendChild(linkDiv);
  companyLinkIndex++;
}

function addPlatformLink() {
  const container = document.getElementById('platformLinksContainer');
  const linkDiv = document.createElement('div');
  linkDiv.className = 'dynamic-section';
  linkDiv.innerHTML = `
    <div class="row">
      <div class="col-md-5 mb-2">
        <label class="form-label fw-bold">Link Name</label>
        <input type="text" class="form-control" name="platformLinks[${platformLinkIndex}][name]" placeholder="Features">
      </div>
      <div class="col-md-5 mb-2">
        <label class="form-label fw-bold">Link URL</label>
        <input type="text" class="form-control" name="platformLinks[${platformLinkIndex}][link]" placeholder="/features">
      </div>
      <div class="col-md-2 mb-2">
        <label class="form-label fw-bold">Visible</label>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" name="platformLinks[${platformLinkIndex}][visible]" checked>
        </div>
        <button type="button" class="btn-remove mt-2" onclick="this.closest('.dynamic-section').remove()">
          <i class="fas fa-trash"></i> Remove
        </button>
      </div>
    </div>
  `;
  container.appendChild(linkDiv);
  platformLinkIndex++;
}

// Add initial links
document.addEventListener('DOMContentLoaded', function() {
  addSocialLink();
  addCompanyLink();
  addPlatformLink();
});
</script>